Screen {
    layout: horizontal;
    grid-size: 2;
    content-align: center middle;
}

/* --- 全体のスタイル --- */
.bordered-list {
    border: white round;
    height: auto;
    width: 30%;
}
.bordered-buttons {
    border: white round;
    height: auto;
    width: 70%;
    content-align: center middle;
}

/* ---マウス系--- */
/* 各ボタンのフレームごとの位置調整 */
.side-buttons{
    width:15%;
}
.main-mouse-frame{
    width: 70%;
    content-align: center middle;
}
.mouse-mode {
    width: 15%;
}

.main-mouse-buttons {
    content-align: center middle;
    layout: grid;
    border: round $primary;
    background: $surface;
    width: 75;
    grid-size: 3;
}

#side_button1, #side_button2 {
    width: 90%;
    height: 8;
    border: round $accent;
    background: $panel;
}
#side_button1 {
    margin: 15 1 1 1;
}

#side_button2 {
    margin: 1;
}

#left_click, #right_click {
    width: 10;
    height: 20;
    border: round $primary;
    background: $surface;
    content-align: center middle;
}

#left_click {
    margin-left: 8;
}

/* スクロール系 */
#scroll_up, #scroll_down {
    width: 1;
    height: 4;
    border: heavy $secondary;
    background: $background;
    content-align: center middle;
}

#scroll_up {
    margin: 5 1 1 4;
}
#scroll_down {
    margin: 1 1 1 4;
}

#mouse_mode {
    width: 90%;
    height: 4;
    border: heavy $secondary;
    background: $background;
    content-align: center middle;
    margin: 40 1 1 1;
}

/* 各Vertical内の配置調整 */
MouseWidget .vertical {
    align: center middle;
}

/* ---LIST--- */
ListView {
    width: 100%;
    height: auto;
}

Label {
    padding: 1 2;
}